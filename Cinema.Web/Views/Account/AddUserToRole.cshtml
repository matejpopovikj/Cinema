@model Cinema.Domain.DomainModels.AddToRoleModel
<div class="container mt-5">
<h2 class="text-center mt-3">Add user with this email to a role:</h2>
<div class="container mt-5 justify-content-center" style="width: 500px;">
@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(z => z.Email)
        @Html.TextBoxFor(z => z.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <p>Roles</p>
        @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
    
}
</div>
</div>
