<div class="container justify-content-center" >

<form asp-controller="User" asp-action="ImportUsers" method="post" enctype="multipart/form-data">

    <div class="form-group w-25">
        <input type="file" name="file" class="form-control" />
    </div>

    <hr />
    @{
        if(User.IsInRole("Administrator"))
        {
           
            <button type="submit" class="btn btn-outline-success">Import Excel</button>
        }
        else
        {
            <p> You need to have an administrator role to make the import</p>
        }

    

    }
</form>
</div>